{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "strict": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "build",
        "baseUrl": ".",
        "jsx": "react",
        "allowJs": true,
        "typeRoots": [
            "./types",
            "./node_modules/@types"
        ],
        "paths": {
            "*": [
                "node_modules/*"
            ]
        }
    },
    "include": [
        "server/**/*"
        // "client/core/src/models/**/*"
    ]
}
